{
  "name": "machina-mcp",
  "version": "3.0.0",
  "description": "MCP server exposing Mac capabilities (iMessage, Mail, Calendar, Notes, Reminders, WhatsApp) for AI agents",
  "type": "module",
  "main": "server/index.ts",
  "bin": {
    "machina-mcp": "server/index.ts"
  },
  "scripts": {
    "start": "tsx server/index.ts",
    "dev": "tsx --watch server/index.ts",
    "permissions": "tsx server/trigger-permissions.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:live": "MACHINA_LIVE_TESTS=true vitest run __tests__/live/",
    "pre-push": "bun run type-check && bun run format:check && bun run test",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "mcp",
    "ai",
    "imessage",
    "whatsapp",
    "macos",
    "automation",
    "anthropic",
    "claude"
  ],
  "author": "Nick Sullivan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TechNickAI/machina"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^12.6.0",
    "express": "^5.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^9.0.0",
    "globals": "^16.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.0"
  }
}
